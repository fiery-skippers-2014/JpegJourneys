<div id="content" class="main">
  <div id="container-mid">
    <h2>Create a journey</h2>
    <hr>

    <%= erb :_error_messages %>

    <form action="/users/:user_id/journeys/create" method="post" id="create_journey">

      <input type="string" name="title" placeholder="Journey Title" required><br>
      <input type="text" name="description" placeholder="Journey Description" required><br>

      <input type="submit" class="submit bttn-blue" value="Create a Journey">

      <div class="clearfix"></div>
    </form>
  </div>
</div>
