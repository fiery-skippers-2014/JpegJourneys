<div id="content" class="main container-mid">

  <%= erb :'user/_user_info', :layout => false, :locals => {:user => @user}  %>

  <% if @logged_in_user == current_user %>
    <div class="indented">
      <span>
        <a href="/users/<%= @user.id %>/delete"><button type="button" id="bttn" class="brown">Delete Account</button></a>
        <a href="/users/<%= @user.id %>/update_account"><button type="button" id="bttn" class="brown">Edit Account</button></a>
      </span>
    </div>
  <% end %>

  <br>
  <hr><hr>
  <br>

  <div class="container-mid">

<!-- Create a journey -->
    <% if @logged_in_user %>
      <% if @user.id == @logged_in_user.id %>
        <!-- This user can create their own survey -->
        <%= erb :'journey/_create' %>
      <% end %>
    <% end %>

    <br><br><br>

    <!-- This User's surveys -->
    <h3><%= @user.name %> has created <%= @users_journeys.count %> Survey(s)</h3>
    <hr>
    <%= erb :'journey/_show_all', :layout => false, :locals => {:journeys => @users_journeys}  %>

    <br><br>
  </div>
</div>







<!-- GOOGLE MAP INPUT AND OUTPUT -->
